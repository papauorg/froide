{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upgrade dependencies",
            "type": "shell",
            "command": "pip-compile -U requirements.in; pip-compile -U requirements-test.in",
            "problemMatcher": [ ],
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },
        
        {
            "label": "Make migrations",
            "type": "shell",
            "command": "python manage.py migratemakemigrations",
            "group":{
                "kind": "none",
                "isDefault": false
            }
        },

        {
            "label": "Run migrations",
            "type": "shell",
            "command": "python manage.py migrate --skip-checks",
            "group": {
                "kind": "none",
                "isDefault": false
            }
        },

        {
            "label": "Run tests",
            "type": "shell",
            "command": "make test",
            "group":{
                "kind": "test",
                "isDefault": true
            },

        }
    ]
}