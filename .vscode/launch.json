    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch frontend",
            "request": "launch",
            "runtimeArgs": [
                "serve"
            ],
            "runtimeExecutable": "yarn",
            "type": "node"
        },

        {
            "name": "Launch backend",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": true,
            "program": "${workspaceFolder}/manage.py",
            "preLaunchTask": "Run migrations"
        }

    ],
    "compounds": [
        {
            "name": "Launch frontent and backend",
            "configurations": [ "Launch frontend", "Launch backend" ]
        }
    ]
}